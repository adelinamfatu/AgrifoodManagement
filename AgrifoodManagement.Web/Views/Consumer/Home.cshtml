@{
    Layout = "~/Views/Shared/_ConsumerNavbarLayout.cshtml";
    ViewData["Title"] = "Bengal Shop - Organic Vegetables";
}

<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #26B571;
            --light-green: #9FDFC3;
            --text-dark: #333333;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        body {
            background-color: white;
            width: 100%;
            height: 100%;
        }

        .container {
            width: 100%;
            margin: 0;
            padding: 20px;
            background-color: white;
        }

        /* Header Section */
        .header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            width: 100%;
        }

        .logo {
            display: flex;
            align-items: center;
        }

            .logo img {
                width: 40px;
                margin-right: 10px;
            }

            .logo h1 {
                font-size: 24px;
                color: var(--text-dark);
                font-weight: bold;
            }

        .search-bar {
            display: flex;
            align-items: center;
            flex-grow: 1;
            max-width: 400px;
            margin: 0 20px;
        }

            .search-bar input {
                width: 100%;
                padding: 10px;
                border: 1px solid #ddd;
                border-radius: 20px;
                padding-left: 15px;
            }

            .search-bar button {
                background-color: #eee;
                border: none;
                padding: 10px 15px;
                border-radius: 0 20px 20px 0;
                margin-left: -40px;
                cursor: pointer;
            }

        /* Navigation */
        .navigation {
            display: flex;
            align-items: center;
            margin: 20px 0;
            width: 100%;
        }

        .categories-dropdown {
            background-color: var(--primary-color);
            color: white;
            padding: 10px 20px;
            border-radius: 5px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: space-between;
            width: 200px;
        }

        .special-offers {
            margin-left: auto;
            color: orange;
            font-weight: bold;
        }

        /* Hero Section */
        .hero {
            background-color: #F4FDF8;
            padding: 40px;
            border-radius: 10px;
            display: flex;
            justify-content: space-between;
            align-items: center;
            position: relative;
            overflow: hidden;
            margin-bottom: 30px;
            width: 100%;
        }

        .hero-content {
            max-width: 50%;
            z-index: 1;
        }

        .discount-text {
            color: var(--primary-color);
            font-size: 20px;
            margin-bottom: 10px;
        }

        .hero-title {
            font-size: 44px;
            color: var(--text-dark);
            margin-bottom: 20px;
            line-height: 1.2;
        }

        .hero-description {
            color: #666;
            margin-bottom: 30px;
            line-height: 1.6;
        }

        .shop-now-btn {
            background-color: var(--primary-color);
            color: white;
            padding: 12px 25px;
            border-radius: 30px;
            text-decoration: none;
            display: inline-block;
            font-weight: bold;
        }

        .hero-image {
            width: 45%;
            z-index: 1;
        }

        .hero-icons {
            position: absolute;
            width: 100%;
            height: 100%;
            top: 0;
            left: 0;
            opacity: 0.1;
            z-index: 0;
        }

        /* Category Section */
        .category-section {
            margin-top: 50px;
            width: 100%;
        }

        .section-title {
            font-size: 24px;
            color: var(--text-dark);
            margin-bottom: 20px;
            position: relative;
            padding-bottom: 10px;
        }

            .section-title::after {
                content: '';
                position: absolute;
                bottom: 0;
                left: 0;
                width: 100px;
                height: 3px;
                background-color: var(--primary-color);
            }

        .category-slider {
            display: flex;
            overflow-x: auto;
            gap: 20px;
            padding: 20px 0;
            position: relative;
            width: 100%;
        }

        .category-item {
            text-align: center;
            min-width: 150px;
        }

        .category-img {
            width: 100%;
            height: 120px;
            background-color: #f5f5f5;
            border-radius: 10px;
            display: flex;
            justify-content: center;
            align-items: center;
            margin-bottom: 10px;
        }

            .category-img img {
                max-width: 80%;
                max-height: 80%;
            }

        .slider-nav {
            display: flex;
            justify-content: flex-end;
            gap: 10px;
            margin-top: 10px;
        }

        .nav-btn {
            width: 40px;
            height: 40px;
            background-color: #eee;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            cursor: pointer;
        }

            .nav-btn.next {
                background-color: var(--primary-color);
                color: white;
            }
    </style>
</head>
<body>
    <div class="container">
        <!-- Header -->
        <header class="header">
            <div class="logo">
                <img src="/images/cart-icon.svg" alt="Bengal Shop Logo">
                <h1>Bengal shop</h1>
            </div>

            <div class="search-bar">
                <input type="text" placeholder="Search here...">
                <button>Search</button>
            </div>
        </header>

        <!-- Navigation -->
        <nav class="navigation">
            <div class="categories-dropdown">
                <span>All Categories</span>
                <span>▼</span>
            </div>

            <div class="special-offers">
                🔥 Special Offers!
            </div>
        </nav>

        <!-- Hero Section -->
        <section class="hero">
            <div class="hero-content">
                <p class="discount-text">Save up 30% off</p>
                <h1 class="hero-title">Bengal Vegetable Farm Organic 100%</h1>
                <p class="hero-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Vehicula faucibus massa est elit maecenas.</p>
                <a href="#" class="shop-now-btn">Shop Now</a>
            </div>

            <img class="hero-image" src="/images/vegetable-bag.png" alt="Organic Vegetables in Bag">

            <div class="hero-icons">
                <!-- Background vegetable icons -->
            </div>
        </section>

        <!-- Category Section -->
        <section class="category-section">
            <div class="section-header">
                <h2 class="section-title">Search by Category</h2>
                <div class="slider-nav">
                    <div class="nav-btn prev">←</div>
                    <div class="nav-btn next">→</div>
                </div>
            </div>

            <div class="category-slider">
                <div class="category-item">
                    <div class="category-img">
                        <img src="/images/rice.png" alt="Rice">
                    </div>
                    <p>Rice</p>
                </div>

                <div class="category-item">
                    <div class="category-img">
                        <img src="/images/vegetables.png" alt="Vegetables">
                    </div>
                    <p>Vegetables</p>
                </div>

                <div class="category-item">
                    <div class="category-img">
                        <img src="/images/meat.png" alt="Meat">
                    </div>
                    <p>Meat</p>
                </div>

                <div class="category-item">
                    <div class="category-img">
                        <img src="/images/tomato.png" alt="Tomato">
                    </div>
                    <p>Tomato</p>
                </div>

                <div class="category-item">
                    <div class="category-img">
                        <img src="/images/strawberry.png" alt="Strawberry">
                    </div>
                    <p>Strawberry</p>
                </div>

                <div class="category-item">
                    <div class="category-img">
                        <img src="/images/dairy.png" alt="Dairy">
                    </div>
                    <p>Dairy</p>
                </div>
            </div>
        </section>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            // Add any interactive functionality here
        });
    </script>
</body>
</html>