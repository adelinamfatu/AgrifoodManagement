@using AgrifoodManagement.Web.Models
@model LoginViewModel

<div class="login-form">
    <div class="title">Login</div>
    <form asp-action="Login" method="post">
        <div class="input-boxes">
            <div class="input-box">
                <i class="fas fa-envelope"></i>
                <input type="text" placeholder="Enter your email" asp-for="Email" required>
            </div>
            <div class="input-box">
                <i class="fas fa-lock"></i>
                <input type="password" placeholder="Enter your password" asp-for="Password" required>
            </div>
            <div class="text"><a href="#">Forgot password?</a></div>
            <div class="button input-box">
                <input type="submit" value="Submit">
            </div>
            <div class="text sign-up-text">
                Don't have an account? <label for="flip">Signup now</label>
            </div>
        </div>
    </form>
</div>
