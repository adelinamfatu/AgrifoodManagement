@using AgrifoodManagement.Web.Views.Presentation.Resources;

<section class="feature section-padding" data-scroll-index="2">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sectioner-header text-center">
                    <h3>@_FeaturesResources.Title</h3>
                    <span class="line"></span>
                    <p>@_FeaturesResources.Header</p>
                </div>
                <div class="section-content text-center">
                    <div class="row">
                        <div class="col-md-4 col-sm-12">
                            <div class="media single-feature wow fadeInUp" data-wow-delay="0.2s">
                                <div class="media-body text-right media-right-margin">
                                    <h5>@_FeaturesResources.Feature1Title</h5>
                                    <p>@_FeaturesResources.Feature1Description</p>
                                </div>
                                <div class="media-right icon-border">
                                    <span class="fas fa-boxes" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="media single-feature wow fadeInUp" data-wow-delay="0.4s">
                                <div class="media-body text-right media-right-margin">
                                    <h5>@_FeaturesResources.Feature2Title</h5>
                                    <p>@_FeaturesResources.Feature2Description</p>
                                </div>
                                <div class="media-right icon-border">
                                    <span class="fas fa-bell" aria-hidden="true"></span>
                                </div>
                            </div>

                            <div class="media single-feature wow fadeInUp" data-wow-delay="0.6s">
                                <div class="media-body text-right media-right-margin">
                                    <h5>@_FeaturesResources.Feature3Title</h5>
                                    <p>@_FeaturesResources.Feature3Description</p>
                                </div>
                                <div class="media-right icon-border">
                                    <span class="fas fa-search" aria-hidden="true"></span>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4 d-none d-md-block d-lg-block">
                            <div class="feature-mobile">
                                <img src="images/iphone-screen-with-shadow.png" class="img-fluid wow fadeInUp" />
                            </div>
                        </div>

                        <div class="col-md-4 col-sm-12">
                            <div class="media single-feature wow fadeInUp" data-wow-delay="0.2s">
                                <div class="media-left icon-border media-right-margin">
                                    <span class="fas fa-map-marked-alt" aria-hidden="true"></span>
                                </div>
                                <div class="media-body text-left">
                                    <h5>@_FeaturesResources.Feature4Title</h5>
                                    <p>@_FeaturesResources.Feature4Description</p>
                                </div>
                            </div>

                            <div class="media single-feature wow fadeInUp" data-wow-delay="0.4s">
                                <div class="media-left icon-border media-right-margin">
                                    <span class="fas fa-chart-line" aria-hidden="true"></span>
                                </div>
                                <div class="media-body text-left">
                                    <h5>@_FeaturesResources.Feature5Title</h5>
                                    <p>@_FeaturesResources.Feature5Description</p>
                                </div>
                            </div>

                            <div class="media single-feature wow fadeInUp" data-wow-delay="0.6s">
                                <div class="media-left icon-border media-right-margin">
                                    <span class="fas fa-dollar-sign" aria-hidden="true"></span>
                                </div>
                                <div class="media-body text-left">
                                    <h5>@_FeaturesResources.Feature6Title</h5>
                                    <p>@_FeaturesResources.Feature6Description</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
