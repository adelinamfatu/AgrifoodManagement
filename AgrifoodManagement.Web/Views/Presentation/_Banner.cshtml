@using AgrifoodManagement.Web.Views.Presentation.Resources;

<section class="banner" data-scroll-index="0">
    <div class="banner-overlay">
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-12">
                    <div class="banner-text">
                        <h2 class="white">@_BannerResources.Title</h2>
                        <h6 class="white">
                            @_BannerResources.Header
                        </h6>
                        <p class="banner-text white">
                            @_BannerResources.Content
                        </p>
                        <ul>
                            <li><a href="#"><img src="images/appstore.png" class="wow fadeInUp" data-wow-delay="0.4s" /></a></li>
                            <li><a href="#"><img src="images/playstore.png" class="wow fadeInUp" data-wow-delay="0.7s" /></a></li>
                        </ul>
                    </div>
                </div>
                <div class="col-md-4 col-sm-12">
                    <img src="images/farmer.png" class="img-fluid wow fadeInUp" />
                </div>
            </div>
        </div>
    </div>
    <span class="svg-wave">
        <img class="svg-hero" src="images/applight-wave.svg" />
    </span>
</section>
