@using AgrifoodManagement.Web.Views.Presentation.Resources;

<section class="about section-padding prelative" data-scroll-index="1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="sectioner-header text-center">
                    <h3>@_AboutResources.Title</h3>
                    <span class="line"></span>
                    <p>
                        @_AboutResources.Header
                    </p>
                </div>
                <div class="section-content text-center">
                    <div class="row">
                        <div class="col-md-4">
                            <div class="icon-box wow fadeInUp" data-wow-delay="0.2s">
                                <i class="fa fa-life-ring" aria-hidden="true"></i>
                                <h5>@_AboutResources.Quality1Title</h5>
                                <p>@_AboutResources.Quality1Description</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="icon-box wow fadeInUp" data-wow-delay="0.4s">
                                <i class="fa fa-mobile" aria-hidden="true"></i>
                                <h5>@_AboutResources.Quality2Title</h5>
                                <p>@_AboutResources.Quality2Description</p>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="icon-box wow fadeInUp" data-wow-delay="0.6s">
                                <i class="fa fa-bolt" aria-hidden="true"></i>
                                <h5>@_AboutResources.Quality3Title</h5>
                                <p>@_AboutResources.Quality3Description</p>
                            </div>
                        </div>
                    </div>
                    <a href="https://www.youtube.com/watch?v=TUxzypMgl0Y" class="about-btn" target="_blank" rel="noopener">
                        @_AboutResources.MoreButton
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
